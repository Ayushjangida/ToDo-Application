<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:padding="20dp"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

   <androidx.cardview.widget.CardView
       android:layout_width="match_parent"
       android:layout_height="wrap_content">
       <RelativeLayout
           android:layout_width="wrap_content"
           android:layout_height="wrap_content">

       <EditText
           android:id="@+id/create_list_popup_edittext"
           android:hint="List Name"
           android:layout_width="match_parent"
           android:layout_height="wrap_content"/>
           <Button
               android:id="@+id/create_list_setcolor"
               android:layout_below="@+id/create_list_popup_edittext"
               android:layout_centerHorizontal="true"
               android:background="@android:color/transparent"
               android:text="Set List Color"
               android:layout_marginTop="5dp"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"/>
       <ImageButton
           android:id="@+id/create_list_popup_button"
           android:src="@drawable/ic_add_black_24dp"
           android:textColor="@android:color/black"
           android:layout_alignParentEnd="true"
           android:layout_alignTop="@+id/create_list_popup_edittext"
           android:layout_alignBottom="@id/create_list_popup_edittext"
           android:text="Create List"
           android:background="@android:color/transparent"

           android:layout_width="wrap_content"
           android:layout_height="wrap_content"/>
       </RelativeLayout>
   </androidx.cardview.widget.CardView>

</RelativeLayout>