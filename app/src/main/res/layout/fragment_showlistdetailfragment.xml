<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <TextView
        android:id="@+id/showdetaillist_listname_textview"
        android:text="List Name"
        android:textSize="25sp"
        android:paddingLeft="15dp"
        android:paddingTop="15dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <Button
        android:id="@+id/showdetaillist_additem_button"
        android:text="+ Add Item"
        android:background="@android:color/transparent"
        android:textSize="12sp"
        android:layout_alignParentEnd="true"
        android:paddingLeft="15dp"
        android:paddingTop="15dp"
        android:layout_alignBottom="@+id/showdetaillist_listname_textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <ListView
        android:id="@+id/showdetaillist_item_listview"
        android:layout_below="@+id/showdetaillist_listname_textview"
        android:layout_marginRight="8dp"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="15dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />


</RelativeLayout>