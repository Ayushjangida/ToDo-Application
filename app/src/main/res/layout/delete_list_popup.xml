<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:padding="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/delete_list_popup_textview"
                android:text="Are you sure you want to delete the entire list?"
                android:layout_centerHorizontal="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <Button
                android:id="@+id/delete_list_popup_no_button"
                android:layout_below="@+id/delete_list_popup_textview"
                android:layout_marginLeft="70dp"
                android:background="@android:color/transparent"
                android:text="No"
                android:layout_marginTop="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <Button
                android:id="@+id/delete_list_popup_yes_button"
                android:layout_below="@+id/delete_list_popup_textview"
                android:background="@android:color/transparent"
                android:text="yes"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="10dp"
                android:layout_toRightOf="@+id/delete_list_popup_no_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <ProgressBar
                android:id="@+id/delete_list_progressbar"
                android:layout_centerHorizontal="true"
                android:visibility="invisible"
                android:layout_centerVertical="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </RelativeLayout>
    </androidx.cardview.widget.CardView>


</RelativeLayout>